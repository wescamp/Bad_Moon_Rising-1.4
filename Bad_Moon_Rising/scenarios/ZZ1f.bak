#textdomain wesnoth-Bad_Moon_Rising
[scenario]
	id="ZZ1f"
	name= _ "Wildlife"
	map_data="{@campaigns/Bad_Moon_Rising/maps/ZZ1f.map}"
	next_scenario="ZZ1_North1"
	victory_when_enemies_defeated=no
	{TURNS 14 12 10}
	{SCENARIO_MUSIC "northerners.ogg"}


	{BMR_DAYLONG}
	{BMR_SNOW}

	[event]
	name=prestart
		[objectives]
		side=1
			[objective]
			condition=win
			description=_ "Defeat Enemy Patrol"
			[/objective]
			[objective]
			condition=lose
			description=_ "Death of Lorenzon"
			[/objective]
			[objective]
			condition=lose
			description=_ "Time Runs Out"
			[/objective]
		[/objectives]
	[/event]

	[side]
	type=Ukian Commander
	description=Lorenzon
	user_description= _ "Lorenzon"
	profile="portraits/lorenzon.png"
	side=1
	canrecruit=yes
	controller=human
	shroud=no
	fog=yes
	recruit=Ukian Regular, Ukian Archer, Ukian Dog, Ukian Runner
	{GOLD 120 100 80}
	team_name=good
	[/side]

	[side]
#ifdef HARD
	type=Orcish Slurbow
	generate_description=yes
#else
	type=Orcish Crossbowman
	generate_description=yes
#endif
	recruit=Goblin Spearman
	side=2
	team_name=bad
	[ai]
	aggression=1.0
	[/ai]
	[/side]

	[side]
	no_leader=yes
	side=3
	team_name=wild
	[/side]

	[event]
	name=prestart

        [set_variable]
        name=foes1
        random=1..5
        [/set_variable]
        [set_variable]
        name=foes2
        random=1..5
        [/set_variable]
        [set_variable]
        name=foes3
        random=1..3
        [/set_variable]
        [set_variable]
        name=foes4
        random=1,1,2
        [/set_variable]
        {RANDTERRAIN 10 Hh Ha}
        {RANDTERRAIN 10 Ww Ai}
        {RANDTERRAIN 10 Gg Aa}
        {RANDTERRAIN 10 Gs^Fp Aa^Fpa}
        {SCATTER_IMAGE (terrain=Aa) $foes1 scenery/pine1.png}
        {SCATTER_IMAGE (terrain=Gg) $foes2 scenery/rock2.png}
        {SCATTER_FOES 5 20 1 20 (Orcish Archer) $foes1 2}
        {SCATTER_FOES 5 20 1 20 (Orcish Grunt) $foes2 2}
        {SCATTER_FOES 5 20 1 20 (Arctic Wolf) $foes3 3}
        {SCATTER_FOES 5 20 1 20 (Yeti) $foes4 3}
	[/event]

	[event]
	name=start
	[/event]

	[event]
	name=turn 2
# remove the keep
	[terrain]
	terrain=Ce
	x,y=1,10
	[/terrain]
	[/event]

	[event]
	name=new turn
	first_time_only=no
	[if]
	    [not]
		[have_unit]
		side=2
		[/have_unit]
	    [/not]
	    [then]
	{SKIRMISHEXP}
	[gold]
	side=1
	amount=50
	[/gold]
		[endlevel]
		result=victory
		carryover_percentage=100
		[/endlevel]
	    [/then]
	    [/if]
	[/event]

	[event]
	name=die
		[filter]
		description=Lorenzon
		[/filter]
		[message]
		speaker=unit
		message= _ "This wasn't supposed to happen..."
		[/message] 
		[endlevel]
		result=defeat
		[/endlevel]
	[/event]

	[event]
	name=time over
		[message]
		speaker=Lorenzon
		message= _ "This is taking too long, they now know where we are..."
		[/message] 
		[endlevel]
		result=defeat 
		[/endlevel]
	[/event]
	
[/scenario]
